<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tau.user.tausurveryapp.RegisterActivity">



    <!--<Space-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_centerHorizontal="true" />-->

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:weightSum="6">

        <!--Heading-->
        <TextView
            android:text="טופס הרשמה לסקר"
            android:textDirection="rtl"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <!-- sex -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="15sp">

            <TextView
                    android:text="מין"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSex"
                    android:textSize="24sp"
                    android:layout_weight="1.98" />

            <RadioGroup
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:layout_weight="0.02"
                android:weightSum="1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSexMale"
                    android:text="זכר"
                    android:layout_weight="0.9" />

                <RadioButton
                    android:text="נקבה"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSexFemale"
                    android:layout_weight="0.1" />

            </RadioGroup>

            </LinearLayout>

        <!--Date of Birth-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="תאריך לידה"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblDateOfBirth"
                android:layout_weight="2"
                android:textSize="24sp"
                />

            <EditText
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/txtYearOfBirth"
                android:hint="שנה"/>

            <EditText
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/txtMonthOfBirth"
                android:hint="חודש"/>

            <EditText
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtDayOfBirth"
                android:layout_weight="1"
                android:hint="יום"/>

        </LinearLayout>

        <!--Address-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layoutDirection="rtl"
            android:layout_weight="1"
            android:weightSum="1"
            >


            <TextView
                android:text="כתובת מגורים"
                android:layout_height="wrap_content"
                android:layout_width="204dp"
                android:id="@+id/lblAddress"
                android:textSize="24sp"
                android:layout_weight="0.5"/>

            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="רחוב"
                android:ems="10"
                android:id="@+id/txtStreetNumber"
                android:inputType="text|number"
                android:layout_weight="0.2"/>

            <EditText
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|number"
                android:text="מספר"
                android:ems="10"
                android:id="@+id/txtHouseNumber"
                android:layout_weight="0.1"/>

            <EditText
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="עיר"
                android:ems="10"
                android:id="@+id/txtCity"
                android:layout_weight="0.1" />
        </LinearLayout>

        <!-- Building Type -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:text="סוג מגורים"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BuildingType"
                android:textSize="24sp"
                android:layout_weight="0.2"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:layout_weight="0.5">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBuildingTypeShared"
                    android:layout_weight="1"
                    android:text="בניין מגורים" />

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBuldingTypePrivate"
                    android:layout_weight="1" />
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

</ScrollView>

</RelativeLayout>
