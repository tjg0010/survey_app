<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tau.user.tausurveyapp.activities.WelcomeActivity">

        <include layout="@layout/tau_toolbar"/>

        <android.support.v4.widget.Space
            android:id="@+id/spaceTopWrapper"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_below="@id/spaceTopWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_btn_continue_txt"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:background="?attr/colorAccent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_below="@id/txtWelcome"
            android:onClick="continue_clicked"/>

    </RelativeLayout>
</ScrollView>
